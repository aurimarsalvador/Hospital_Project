<p style="color: green"><%= notice %></p>

<table class="table table-bordered table-hover" id="compras">
  <thead>
    <tr>
      <td>Nº NF-e</td>
      <td>Fornecedor</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @compra.id %></td>
      <td><%= @compra.fornecedor.nome %></td>
    </tr>
  </tbody>
</table>

<h3>Itens</h3>
<table class="table table-bordered table-hover" id="compras">
  <thead>
    <tr>
      <td>Produto</td>
      <td>Quantidade</td>
      <td>Valor Unitário</td>
      <td>Valor Total</td>
    </tr>
  </thead>
  <tbody>
    <% @compra.compra_itens.each do |item| %>
      <tr>
        <td><%= item.produto.nome %></td>
        <td><%= item.quantidade %></td>
        <td><%= item.valor_unitario %></td>
        <td><%= item.valor_total %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Dados Gerais</h3>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <td>Valor à Vista: <%= @compra.valor_a_vista %></td>
      <td>Valor à Prazo: <%= @compra.valor_a_prazo %></td>
      <td>Valor Total: <%= @compra.valor_total %></td>
    </tr>
  </thead>
</table>


<div>
  <%= link_to "Editar", edit_compra_path(@compra) %> |
  <%= link_to "Voltar", compras_path %>

  <%= button_to "Cancelar Compra", @compra, method: :delete %>
</div>
